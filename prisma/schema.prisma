generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Match {
  id        String   @id @default(cuid()) @map("_id")
  name      String
  grade     Int
  scores    Score[]
}

model Score {
  id         String   @id @default(cuid()) @map("_id")
  matchId    String
  position   Int
  score      Int?
  class      Int?

  match      Match    @relation(fields: [matchId], references: [id])
}
